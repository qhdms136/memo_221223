<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.memo.post.dao.PostMapper">
 	<select id="selectPostList" resultType="com.memo.post.model.Post">
 		SELECT
 			`id`
			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
 		FROM
 			`post`
 		ORDER BY `id` DESC;
 	</select>
 	
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO `post`
 		(
			`userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{subject}
 			, #{content}
 			, #{imagePath}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<select id="selectPostByPostIdUserId" parameterType="map" resultType="com.memo.post.model.Post">
 		SELECT
 			`id`
			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId}
 			AND `userId` = #{userId}
 	</select>
 	
 	<update id="updatePostByPostId" parameterType="map">
 		UPDATE `post`
 		SET
 			`subject` = #{subject}
 			, `content` = #{content}
 			, `updatedAt` = NOW()
 			<!-- imagePath가 있을 때에만 수정한다. -->
 			<if test="imagePath != null">
 			, `imagePath` = #{imagePath}
 			</if>
 		WHERE
 			`id` = #{postId}
 	</update>
 	<delete id="deleteByPostIdUserId" parameterType="map">
 		DELETE
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId}
 			AND `userId` = #{userId}
 	</delete>
 </mapper>